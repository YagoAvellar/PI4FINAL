<!-- views/petList.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Pets</title>
</head>
<body>
  <h1>Lista de Pets</h1>
  <ul>
    <% pets.forEach(p => { %>
      <li><%= p.name %> - <%= p.breed %> - <%= p.age %> anos</li>
    <% }) %>
  </ul>
  <a href="/pet/new">Cadastrar Novo Pet</a>
  <a href="/menu">Voltar ao Menu</a>
</body>
</html>
